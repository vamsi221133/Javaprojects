import java.util.Scanner;
public class patterns {
public static void main(String[] args) {
 int i,j;
 System.out.println("enter any special character :");
 Scanner sc=new Scanner(System.in);
 String m=sc.next();
  for(i=1;i<=4;i++)
  {
    System.out.println(" ");
    for(j=1;j<=i;j++)
    {
    System.out.print(m+" ");
    }
  }
}
}
